          "Path": "/api/users/current",
          "Methods": [ "GET" ]
        },
        "Transform": {
          "PathPattern": "api/users/current"
        }
      },
      "users-route": {
        "ClusterId": "users-cluster",
        "CorsPolicy": "CorsPolicy",
        "RateLimiterPolicy": "RateLimiterPolicy",
        "Match": {
          "Path": "/api/users/{**catch-all}"
