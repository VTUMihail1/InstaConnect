{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "TokenOptions": {
    "Issuer": "https://localhost:7161",
    "Audience": "https://localhost:7161",
    "AccessTokenSecurityKey": "",
    "AccountTokenSecurityKey": "",
    "AccessTokenLifetimeSeconds": 900,
    "AccountTokenLifetimeSeconds": 3600
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "/Logs/Error.txt",
          "restrictedToMinimumLevel": "Error"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "/Logs/Information.txt",
          "restrictedToMinimumLevel": "Information"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "/Logs/Warning.txt",
          "restrictedToMinimumLevel": "Warning"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "/Logs/Debug.txt",
          "restrictedToMinimumLevel": "Debug"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "ReverseProxy": {
    "Routes": {
      "accounts-edit-route": {
        "ClusterId": "accounts-cluster",
        "AuthorizationPolicy": "default",
        "CorsPolicy": "CorsPolicy",
        "RateLimiterPolicy": "RateLimiterPolicy",
        "Match": {
          "Path": "/api/accounts",
          "Methods": [ "PUT" ]
        },
        "Transform": {
          "PathPattern": "api/accounts"
        }
      },
      "accounts-delete-route": {
        "ClusterId": "accounts-cluster",
        "AuthorizationPolicy": "default",
        "CorsPolicy": "CorsPolicy",
        "RateLimiterPolicy": "RateLimiterPolicy",
        "Match": {
          "Path": "/api/accounts",
          "Methods": [ "DELETE" ]
        },
        "Transform": {
          "PathPattern": "api/accounts"
        }
      },
      "accounts-admin-route": {
        "ClusterId": "accounts-cluster",
        "AuthorizationPolicy": "AdminPolicy",
        "CorsPolicy": "CorsPolicy",
        "RateLimiterPolicy": "RateLimiterPolicy",
        "Match": {
          "Path": "/api/accounts/admin/{**catch-all}"
        },
        "Transform": {
          "PathPattern": "api/accounts/admin/{**catch-all}"
        }
      },
      "accounts-route": {
        "ClusterId": "accounts-cluster",
        "CorsPolicy": "CorsPolicy",
        "RateLimiterPolicy": "RateLimiterPolicy",
        "Match": {
          "Path": "/api/accounts/{**catch-all}"
        },
        "Transform": {
          "PathPattern": "api/accounts/{**catch-all}"
        }
      },
