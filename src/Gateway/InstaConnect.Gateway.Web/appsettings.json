        "CorsPolicy": "CorsPolicy",
        "RateLimiterPolicy": "RateLimiterPolicy",
        "Match": {
          "Path": "/api/post-comment-likes/{**catch-all}"
        },
        "Transform": {
          "PathPattern": "api/post-comment-likes/{**catch-all}"
        }
      },
      "messages-route": {
        "ClusterId": "messages-cluster",
        "AuthorizationPolicy": "default",
        "CorsPolicy": "CorsPolicy",
