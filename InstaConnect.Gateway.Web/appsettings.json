{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "users-route": {
        "ClusterId": "users-cluster",
        "AuthorizationPolicy": "default",
        "Match": {
          "Path": "/users/{**catch-all}"
        },
        "Transform": {
          "PathPattern": "/users/{**catch-all}"
        }
      },
      "posts-route": {
        "ClusterId": "posts-cluster",
        "AuthorizationPolicy": "default",
        "Match": {
          "Path": "/posts/{**catch-all}"
        },
        "Transform": {
          "PathPattern": "/posts/{**catch-all}"
        }
      },
      "messages-route": {
        "ClusterId": "messages-cluster",
        "AuthorizationPolicy": "default",
        "Match": {
          "Path": "/messages/{**catch-all}"
        },
        "Transform": {
          "PathPattern": "/messages/{**catch-all}"
        }
      },
      "follows-route": {
        "ClusterId": "follows-cluster",
        "AuthorizationPolicy": "default",
        "Match": {
          "Path": "/follows/{**catch-all}"
        },
        "Transform": {
          "PathPattern": "/follows/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "users-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://instaconnect.users.web:5200"
          }
        }
      },
      "posts-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://instaconnect.posts.web:5300"
          }
        }
      },
      "messages-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://instaconnect.messages.web:5400"
          }
        }
      },
      "follows-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://instaconnect.follows.web:5500"
          }
        }
      }
    }
  }
}
